<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AdminActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Logout"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/icon_color_dark" />

    <TextView
        android:id="@+id/tvAdminTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/spartan_extrabold"
        android:gravity="center"
        android:text="Admin Dashboard"
        android:textColor="@color/icon_color_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvAdminTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <Button
            android:id="@+id/btnViewRepairmen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Repairmen"
            android:fontFamily="@font/spartan_extrabold"
            android:backgroundTint="@color/primary_blue"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp"
            app:cornerRadius="12dp" />

        <Button
            android:id="@+id/btnViewUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Users"
            android:fontFamily="@font/spartan_extrabold"
            android:backgroundTint="@color/primary_blue"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp"
            app:cornerRadius="12dp" />

        <Button
            android:id="@+id/btnViewRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Requests"
            android:fontFamily="@font/spartan_extrabold"
            android:backgroundTint="@color/primary_blue"
            android:paddingVertical="12dp"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>