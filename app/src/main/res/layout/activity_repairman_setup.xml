<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RepairmanSetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_extrabold"
            android:gravity="center"
            android:text="Complete Your Professional Profile"
            android:textColor="@color/icon_color_dark"
            android:textSize="18sp"
            android:layout_marginTop="48dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Your Specialties"
                    android:fontFamily="@font/spartan_extrabold"
                    android:textColor="@color/icon_color_dark"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingVertical="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/cbAircon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spartan_extrabold"
                        android:textColor="@color/icon_color_dark"
                        android:text="Air Conditioning Fix" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/cbGas"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:fontFamily="@font/spartan_extrabold"
                        android:textColor="@color/icon_color_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gas Tank Replacement" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/cbPlumbing"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:fontFamily="@font/spartan_extrabold"
                        android:textColor="@color/icon_color_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plumbing" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/cbKitchen"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:fontFamily="@font/spartan_extrabold"
                        android:textColor="@color/icon_color_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kitchen Appliance Fix" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/cbElectrician"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:fontFamily="@font/spartan_extrabold"
                        android:textColor="@color/icon_color_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electrician / Wiring" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/cbCleaning"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:fontFamily="@font/spartan_extrabold"
                        android:textColor="@color/icon_color_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cleaning Service" />

                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service Description"
                    android:textColor="@color/icon_color_dark"
                    android:fontFamily="@font/spartan_extrabold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., I specialize in inverter AC repairs..."
                    app:counterEnabled="true"
                    app:counterMaxLength="500"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editServiceDescription"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxLength="500" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/buttonSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:padding="14dp"
            android:textSize="16sp"
            android:fontFamily="@font/spartan_extrabold"
            android:backgroundTint="@color/primary_blue"
            android:layout_marginTop="20dp"
            app:cornerRadius="12dp" />

    </LinearLayout>
</ScrollView>