<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textRequestInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_extrabold"
            android:text="ID: [Request ID]"
            android:textColor="@color/icon_color_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textServiceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/spartan_extrabold"
            android:text="Service: [Type]"
            android:textColor="@color/icon_color_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textCustomerAndRepairman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/spartan_extrabold"
            android:text="From: [User] | To: [Repairman]"
            android:textColor="@color/icon_color_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textRequestStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/spartan_extrabold"
            android:text="Status: [Status]"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>