<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repairman Name"
            android:textStyle="bold"
            android:fontFamily="@font/spartan_extrabold"
            android:textColor="@color/icon_color_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textSpecialties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_extrabold"
            android:textColor="@color/icon_color_dark"
            android:text="Specialties: Air Conditioning, Plumbing"
            android:layout_marginTop="4dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 4.8"
            android:fontFamily="@font/spartan_extrabold"
            android:textColor="@color/icon_color_dark"
            android:layout_marginTop="2dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_extrabold"
            android:textColor="@color/icon_color_dark"
            android:text="Location: Shah Alam, Selangor"
            android:layout_marginTop="2dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonRequest"
            android:layout_width="match_parent"
            android:fontFamily="@font/spartan_extrabold"
            android:layout_height="wrap_content"
            android:text="Request Service"
            android:backgroundTint="@color/primary_blue"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>