<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Service Type"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnAircon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Air Conditioning Fix"
        android:layout_marginVertical="8dp" />

    <Button
        android:id="@+id/btnGas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gas Tank Replacement"
        android:layout_marginVertical="8dp" />

    <Button
        android:id="@+id/btnPlumbing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plumbing"
        android:layout_marginVertical="8dp" />

    <Button
        android:id="@+id/btnKitchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kitchen Appliance Fix"
        android:layout_marginVertical="8dp" />

    <Button
        android:id="@+id/btnElectrician"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Electrician / Wiring"
        android:layout_marginVertical="8dp" />

    <Button
        android:id="@+id/btnCleaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cleaning Service"
        android:layout_marginVertical="8dp" />

</LinearLayout>
