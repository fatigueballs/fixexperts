<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="26dp"
        android:layout_marginTop="76dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:elevation="4dp"
        android:padding="8dp"
        android:src="@drawable/back_button"
        app:tint="@color/icon_color_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Select a Service Type"
            android:fontFamily="@font/spartan_extrabold"
            android:textColor="@color/icon_color_dark"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:baselineAligned="false"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlumbing"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="174dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/spartan_extrabold"
                android:maxLines="2"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/service_plumbing"
                android:textColor="@color/icon_color_dark"
                android:textSize="10sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_plumbing"
                app:iconGravity="textTop"
                app:iconSize="50dp"
                app:iconTint="@color/icon_color_dark"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAircon"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="174dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/spartan_extrabold"
                android:maxLines="2"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/service_aircond"
                android:textColor="@color/icon_color_dark"
                android:textSize="10sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_aircond"
                app:iconGravity="textTop"
                app:iconSize="50dp"
                app:iconTint="@color/icon_color_dark"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnElectrician"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="174dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/spartan_extrabold"
                android:maxLines="2"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/service_electrical"
                android:textColor="@color/icon_color_dark"
                android:textSize="10sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_electrical"
                app:iconGravity="textTop"
                app:iconSize="50dp"
                app:iconTint="@color/icon_color_dark"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/servicesGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGas"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="174dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/spartan_extrabold"
                android:maxLines="2"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/service_gas_tank"
                android:textColor="@color/icon_color_dark"
                android:textSize="10sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_gas_tank"
                app:iconGravity="textTop"
                app:iconSize="50dp"
                app:iconTint="@color/icon_color_dark"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKitchen"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="174dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="@string/service_appliance"
                android:fontFamily="@font/spartan_extrabold"
                android:textColor="@color/icon_color_dark"
                android:textSize="10sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:maxLines="2"
                app:icon="@drawable/ic_appliance"
                app:iconTint="@color/icon_color_dark"
                app:iconGravity="textTop"
                app:iconSize="50dp"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp"
                app:cornerRadius="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCleaning"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="174dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Cleaning"
                android:fontFamily="@font/spartan_extrabold"
                android:textColor="@color/icon_color_dark"
                android:textSize="10sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:maxLines="2"
                app:icon="@drawable/ic_view_all"
                app:iconTint="@color/icon_color_dark"
                app:iconGravity="textTop"
                app:iconSize="50dp"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>