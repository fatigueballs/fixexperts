<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Select a Service Type"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/buttonAC" android:text="Air Conditioning Fix" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <Button android:id="@+id/buttonGas" android:text="Gas Tank Replacement" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <Button android:id="@+id/buttonPlumbing" android:text="Plumbing" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <Button android:id="@+id/buttonKitchen" android:text="Kitchen Appliance Fix" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <Button android:id="@+id/buttonElectrician" android:text="Electrician/Wiring" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <Button android:id="@+id/buttonCleaning" android:text="Cleaning Service" android:layout_width="match_parent" android:layout_height="wrap_content" />
</LinearLayout>