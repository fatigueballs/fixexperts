<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/spartan_extrabold"
                android:text="@string/home_greeting"
                android:textColor="@color/primary_blue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btnLogout"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Logout"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/primary_blue" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="63dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/input_field_background"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="12dp"
                android:fontFamily="@font/spartan_extrabold"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGreeting" />

            <GridLayout
                android:id="@+id/servicesGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="16dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:rowCount="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etSearch">

                <LinearLayout
                    android:id="@+id/grid_plumbing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#F0F0F0"
                        app:strokeWidth="1dp">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/service_plumbing"
                            android:src="@drawable/ic_plumbing"
                            app:tint="@color/icon_color_dark" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/spartan_extrabold"
                        android:text="@string/service_plumbing"
                        android:textAlignment="center"
                        android:textColor="@color/icon_color_dark"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grid_aircond"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#F0F0F0"
                        app:strokeWidth="1dp">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/service_aircond"
                            android:src="@drawable/ic_aircond"
                            app:tint="@color/icon_color_dark" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/spartan_extrabold"
                        android:text="@string/service_aircond"
                        android:textColor="@color/icon_color_dark"
                        android:textSize="13sp"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grid_electrical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#F0F0F0"
                        app:strokeWidth="1dp">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/service_electrical"
                            android:src="@drawable/ic_electrical"
                            app:tint="@color/icon_color_dark" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/spartan_extrabold"
                        android:text="@string/service_electrical"
                        android:textColor="@color/icon_color_dark"
                        android:textSize="13sp"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grid_gas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#F0F0F0"
                        app:strokeWidth="1dp">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/service_gas_tank"
                            android:src="@drawable/ic_gas"
                            app:tint="@color/icon_color_dark" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/spartan_extrabold"
                        android:text="@string/service_gas_tank"
                        android:textColor="@color/icon_color_dark"
                        android:textSize="13sp"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grid_appliance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#F0F0F0"
                        app:strokeWidth="1dp">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/service_appliance"
                            android:src="@drawable/ic_appliance"
                            app:tint="@color/icon_color_dark" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/spartan_extrabold"
                        android:text="@string/service_appliance"
                        android:textColor="@color/icon_color_dark"
                        android:textSize="13sp"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grid_view_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#F0F0F0"
                        app:strokeWidth="1dp">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/service_view_all"
                            android:src="@drawable/ic_view_all"
                            app:tint="@color/icon_color_dark" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/spartan_extrabold"
                        android:text="@string/service_view_all"
                        android:textColor="@color/icon_color_dark"
                        android:textSize="13sp"
                        android:textAlignment="center"/>
                </LinearLayout>

            </GridLayout>

            <TextView
                android:id="@+id/ad_placeholder"
                android:layout_width="349dp"
                android:layout_height="175dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:background="#E0E0E0"
                android:gravity="center"
                android:text="AD SPACE"
                android:textColor="#757575"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/servicesGrid"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>